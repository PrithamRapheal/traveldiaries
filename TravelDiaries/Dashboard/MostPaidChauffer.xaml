<UserControl x:Class="TravelDiaries.Dashboard.MostPaidChauffer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:Wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf" 
             xmlns:local="clr-namespace:TravelDiaries.Dashboard"
             mc:Ignorable="d" 
              d:DesignHeight="250" d:DesignWidth="400" Background="White" Loaded="UserControl_Loaded">
    <Grid>

        <Label Content="Most Paid Chauffeur" HorizontalAlignment="Center" FontWeight="Bold" FontSize="18" Margin="77,-2,71,206" Width="252"/>
        <Wpf:PieChart x:Name="CHauffeurChart" Series="{Binding SeriesCollection}" 
        LegendLocation="Right" InnerRadius="30" Margin="2,31,8,5">
            <Wpf:PieChart.ChartLegend>
                <Wpf:DefaultLegend BulletSize="15" Margin="-100,0,0,0" HorizontalAlignment="Left" HorizontalContentAlignment="Left"/>
            </Wpf:PieChart.ChartLegend>
            <Wpf:PieChart.DataTooltip>
                <Wpf:DefaultTooltip BulletSize="15"/>
            </Wpf:PieChart.DataTooltip>
        </Wpf:PieChart>

    </Grid>
</UserControl>
