                <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtTourIDInvoice" TextWrapping="Wrap" HorizontalAlignment="Left" Height="22" Margin="15,1,-22,0" VerticalAlignment="Top" Width="155" KeyDown="TxtTourIDInvoice_KeyDown"/>
                <Label Grid.Row="2" Grid.Column="1" Content="Search by clicking F1" Foreground="White" FontSize="10" HorizontalAlignment="Left" Margin="10,18,-8,24" Width="146" Grid.RowSpan="2" />
                <Button Grid.Column="1" Grid.Row="4" Visibility="Visible" Content="Confirm" HorizontalAlignment="Left" VerticalAlignment="Top" Width="74" Height="36" Click="btnConfirm_Click" Margin="15,8,0,0"/>
