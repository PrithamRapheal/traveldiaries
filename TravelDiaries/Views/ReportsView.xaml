                    <RowDefinition Height="49*"/>
                    <RowDefinition Height="14*"/>
                    <RowDefinition Height="33*"/>
                    <RowDefinition Height="34*"/>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="37*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="1" Grid.Column="0" Content="Date From" Foreground="White" FontSize="14" HorizontalAlignment="Left" Margin="4,29,0,5" Width="174" Grid.ColumnSpan="2" Grid.RowSpan="2" />
                <Label Grid.Row="2" Grid.Column="0" Content="Date To" Foreground="White" FontSize="14" HorizontalAlignment="Left" Margin="4,29,0,5" Width="174" Grid.ColumnSpan="2" Grid.RowSpan="2" />
                <Label Grid.Row="3" Grid.Column="0" Content="Hotel" Foreground="White" FontSize="14" HorizontalAlignment="Left" Margin="4,29,0,5" Width="174" Grid.ColumnSpan="2" Grid.RowSpan="2" />
                <DatePicker Grid.Row="2" Grid.Column="1" x:Name="dtHotelFrom" HorizontalAlignment="Left" Height="22" Margin="15,2,-23,0" VerticalAlignment="Top" Width="156"/>
                <DatePicker Grid.Row="3" Grid.Column="1" x:Name="dtHotelTo" HorizontalAlignment="Left" Height="22" Margin="15,1,-23,0" VerticalAlignment="Top" Width="156"/>
                <ComboBox Grid.Row="4" Grid.Column="1" x:Name="cmbHotel" HorizontalAlignment="Left" Height="22" Margin="15,1,-22,0" VerticalAlignment="Top" Width="155"/>

                <Button Grid.Column="1" Grid.Row="5" Visibility="Visible" Content="Confirm" HorizontalAlignment="Left" VerticalAlignment="Top" Width="74" Height="36" Click="btnConfirm_Click" Margin="15,8,0,0"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="0" x:Name="InvoiceExpenses" Visibility="Hidden" Grid.Column="0">
            <Grid Width="259" Margin="20,30,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="410">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="33*"/>
                    <RowDefinition Height="33*"/>
